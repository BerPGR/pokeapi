<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        app:layout_constraintTop_toBottomOf="@id/edit_pokename"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/button_send"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="CHECK"/>

    <ImageView
        android:id="@+id/image_pokemon"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/button_send"/>

    <TextView
        android:id="@+id/txt_pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_pokemon"
        app:layout_constraintStart_toStartOf="@id/image_pokemon"
        app:layout_constraintEnd_toEndOf="@id/image_pokemon"
        android:layout_marginTop="20dp"
        android:text=""/>

    <EditText
        android:id="@+id/edit_pokename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>